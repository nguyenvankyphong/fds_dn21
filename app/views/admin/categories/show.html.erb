<% provide :title, t("categories.admin_title") %>
  <div class="containter">
    <div class="categories">
      <h1 class="cate_title"> <%= @category.name %></h1>
      <%= link_to new_admin_category_path, remote: true, class: "category_add-btn" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t "categories.add_new" %>
      <% end %>
    <div class="row">
      <div class="category_new_form"></div>
    </div>
    <div class="row post clearfix">
      <% @child.map do |sub_item| %>
        <%= render "category", category: sub_item %>
      <% end %>
    </div>
    <div class="row post clearfix">
      <%= render partial: "./admin/products/product", collection: (@products), as: :product %>
    </div>

  </div>
</div>
