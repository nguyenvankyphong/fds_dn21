<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-7">
      <div class="well well-sm">
        <div class="row">
          <div class="col-sm-6 col-md-3">
            <img src="http://placehold.it/200x250" alt="" class="img-rounded img-responsive" />
          </div>
            <div class="col-sm-6 col-md-8">
              <div class="user-info">
                <i class="glyphicon glyphicon-user"></i> <%= current_user.name %>
              </div>
                <p>
                  <i class="glyphicon glyphicon-envelope"></i><%= current_user.email %>
                  <br />
                  <i class="glyphicon glyphicon-home"></i><%= current_user.address %>
                  <br />
                  <i class="glyphicon glyphicon-phone"></i><%= current_user.phone %>
                </p>
              <div class="btn-group">
                <button type="button" class="btn btn-primary"><%= t ".social" %></button>
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span><span class="sr-only"><%= t ".social" %></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="https://twitter.com/jquery2dotnet"><%= t ".twitter" %></a></li>
                  <li><a href="https://plus.google.com/+Jquery2dotnet/posts"><%= t ".google" %></a></li>
                  <li><a href="https://www.facebook.com/jquery2dotnet"><%= t ".facebook" %></a></li>
                </ul>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
