<% provide :title, t("products.admin_title") %>

<% if user_signed_in? && current_user.active? %>
  <%= link_to "#" do %>
    <span class="glyphicon glyphicon-plus"><%= t "products.add_to_cart"%></span>
  <% end %>
<% end %>

<h3><%= @product.name %></h3>
<h5><%= t "products.price" %>: <%= @product.price %></h5>
<h5><%= t "generals.category" %>: <%= @product.category.name %></h5>
<h5><%= t "products.quantity" %>: <%= @product.quantity %></h5>
<h5><%= t "products.info" %>: <%= @product.information %></h5>
<div class="">
  <%= image_tag @product.picture.url  %>
</div>
<%= link_to t("generals.edit"), edit_admin_product_path(@product) %>
