<% if can? :manange, Order %>
  <%= form_for(@order_product, url: client_carts_path, method: :post, remote: true) do |f| %>
    <div class="product-quantity">
      <div class="cart-plus-minus">
        <%= f.text_field :quantity, class: "cart-plus-minus-box",
          :required => true, :as => t("products.number"), value: "02" %>
      </div>
      <div class="">
        <%= f.submit t("products.add"), class: "food__btn" %>
      </div>
    </div>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.hidden_field :price, value: @product.price %>
  <% end %>
<% else %>
  Please log in to add products to cart
<% end %>
