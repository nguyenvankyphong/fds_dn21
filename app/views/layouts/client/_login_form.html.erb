<div class="accountbox-wrapper">
  <div class="accountbox text-left">
    <ul class="nav accountbox__filters" id="myTab" role="tablist">
      <li>
        <a class="active" id="log-tab" data-toggle="tab" href="#log" role="tab" aria-controls="log" aria-selected="true">Login</a>
      </li>
      <li>
        <a id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Register</a>
      </li>
    </ul>
    <div class="accountbox__inner tab-content" id="myTabContent">
      <div class="accountbox__login tab-pane fade show active" id="log" role="tabpanel" aria-labelledby="log-tab">
        <%= form_for(:user, :url => session_path(:user)) do |f| %>
          <div class="single-input">
            <%= f.email_field :email, class: "cr-round--lg", placeholder: true %>
          </div>

          <div class="single-input">
            <%= f.password_field :password, class: "cr-round--lg", placeholder: true %>
          </div>

          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t "remember" %></span>
          <% end %>

          <div class="single-input">
            <%= f.submit t("layouts.header.title4"), class: "food__btn" %>
          </div>

          <div class="single-input">
            <%= link_to "Forgot your password?", new_password_path(:user), remote: true %><br />
          </div>
          <div class="single-input">
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(:user), remote: true %><br />
          </div>
        <% end %>
      </div>
      <div class="accountbox__register tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <%= render "layouts/client/signup_form" %>
      </div>
      <div class="accountbox__options tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <%= render "layouts/client/reset_password_form" %>
      </div>
      <span class="accountbox-close-button">
        <i class="zmdi zmdi-close"></i>
      </span>
    </div>
  </div>
</div>
