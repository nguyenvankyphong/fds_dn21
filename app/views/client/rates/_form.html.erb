<%= form_for(@rate, url: client_rates_path, class: "row") do |f| %>
  <div class="col-md-6 field">
    <%= f.text_area :comment %>
  </div>
  <div class="col-md-3">
    <%= f.select :rate, Settings.rate_level %>
  </div>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="col-md-2">
    <%= f.submit t("helpers.submit.category.submit"), class: "btn btn-primary" %>
  </div>
<% end %>
